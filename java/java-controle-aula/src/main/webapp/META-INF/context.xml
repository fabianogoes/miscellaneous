<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Context path="/controleaula" docBase="controleaula">
 
        <Resource name="jdbc/controleaula_pool"
                  global="jdbc/controleaula_pool"
                  auth="Container"
                  type="javax.sql.DataSource"
                  driverClassName="com.mysql.jdbc.Driver"
                  url="jdbc:mysql://localhost:3306/controleaula?autoReconnect=true"
                  username="root"
                  password="root"
                   
                  maxActive="100"
                  maxIdle="20"
                  minIdle="5"
                  maxWait="10000"/>
                  
</Context>